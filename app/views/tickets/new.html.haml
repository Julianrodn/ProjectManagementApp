%div.container.mx-auto.p-8
  - unless request.referer == new_project_story_url(@project)  # Verifica si la URL de la página anterior es la de crear una nueva historia
    %div.flex.items-center.justify-between.bg-indigo-700.p-4.rounded.mb-8
      %h2.text-xl.font-bold.text-white= "Nuevo Ticket - #{@story.name}"
      = link_to 'Atrás', project_story_path(@project, @story), class: "text-white hover:text-pink-200"

    = render 'form'
