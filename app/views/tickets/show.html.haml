%div.container.mx-auto.p-8
  %div.flex.items-center.justify-between.bg-indigo-700.p-4.rounded
    %h2.text-xl.font-bold.text-white= @ticket.name
    = link_to 'Atrás', project_story_path(@project, @story), class: "text-white hover:text-pink-200"

  %div.mt-4.text-gray-700.dark:text-gray-800
    %p.font-bold Estado:
    %p= @ticket.status
    %p.font-bold Descripción:
    %p= @ticket.description
    %p.font-bold Comentarios:
    %p= @ticket.comments

  %div.flex.justify-between.mt-8.mr-4
    = link_to edit_project_story_ticket_path(@project, @story, @ticket), class: "flex items-center justify-center w-full max-w-xs m-2 bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded text-center" do
      %img.w-5.h-5.mr-2{ src: "https://img.icons8.com/?size=256&id=88sXsrqGPpa0&format=png", alt: "Editar Ticket" }
      Editar
    = button_to project_story_ticket_path(@project, @story, @ticket), method: :delete, class: "flex items-center justify-center w-full max-w-xs m-2 bg-red-700 hover:bg-red-800 text-white font-bold py-2 px-4 rounded text-center", onclick: "return confirm('¿Estás seguro de que deseas eliminar este ticket?');" do
      %img.w-5.h-5.mr-2{ src: "https://img.icons8.com/?size=256&id=LdszTuzBUPPp&format=png", alt: "Eliminar Ticket" }
      Eliminar




