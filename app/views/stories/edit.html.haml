%div.container.mx-auto.p-8
  %div.flex.items-center.justify-between.bg-indigo-700.p-4.rounded.mb-8
    %h2.text-xl.font-bold.text-white= "Editar Historia de Usuario - #{@story.name}"
    = link_to 'Atrás', project_story_path(@project, @story), class: 'text-white hover:text-pink-200'

  %div.bg-white.p-8.rounded-lg.shadow-md.mt-8
    %h1.text-2xl.font-bold.text-900 Editar Historia de Usuario

    = form_with(model: @story, url: project_story_path(@project, @story), method: :patch, local: true) do |form|
      - if @story.errors.any?
        #error_explanation.mb-5
          %h2.text-red-500= "#{pluralize(@story.errors.count, 'error')} impidieron guardar la historia de usuario:"
          %ul
            - @story.errors.full_messages.each do |message|
              %li= message

      .mb-5.mt-8
        = form.label :name, 'Nombre de la Historia', class: "block mb-2 text-sm font-medium text-gray-900"
        = form.text_field :name, class: "block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Ingresa el nombre de la historia de usuario"

      .mb-5
        = form.label :description, 'Descripción de la Historia', class: "block mb-2 text-sm font-medium text-gray-900"
        = form.text_area :description, class: "block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Ingresa la descripción de la historia de usuario"

      .actions.mt-4
        = form.submit 'Actualizar Historia de Usuario', class: "flex items-center justify-center w-full max-w-xs bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded text-center"

