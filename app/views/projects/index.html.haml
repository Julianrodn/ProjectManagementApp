%div.container.mx-auto.p-8
  %div.flex.items-center.justify-between.bg-indigo-700.p-4.rounded
    %h1.text-2xl.font-bold.text-white Proyectos
    - if user_signed_in?
      = button_to 'Cerrar sesi√≥n', destroy_user_session_path, method: :delete, class: "text-white hover:text-pink-200"

  %div.grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6.mt-8
    - @projects.each do |project|
      = link_to project_path(project), class: "block max-w-sm p-6 bg-indigo-100 border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700" do
        %h5.mb-2.text-2xl.font-bold.tracking-tight.text-gray-900.dark:text-white= project.name
        %p.font-normal.text-gray-700.dark:text-gray-400= project.description

  %div.flex.justify-center.mt-8
    = link_to new_project_path do
      %img{ src: "https://img.icons8.com/?size=256&id=Y2mKhNPGS0Cd&format=png", alt: "Nuevo Proyecto", class: "w-12 h-12 hover:opacity-75" }
